<Window x:Class="HomeTask2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HomeTask2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="Connect" Content="Connect" HorizontalAlignment="Left" Height="70" Margin="70,44,0,0" VerticalAlignment="Top" Width="140" FontSize="16" FontWeight="Bold" BorderBrush="Black" Foreground="#FF6934FF" Background="#FFFBF55E" Click="Connect_Click"/>
        <Button x:Name="Disable" Content="Disable" HorizontalAlignment="Left" Height="70" Margin="70,115,0,0" VerticalAlignment="Top" Width="140" Background="#FFF3EE60" BorderBrush="Black" Foreground="#FF6C20F7" FontSize="16" FontWeight="Bold" Click="Disable_Click"/>
        <TextBox x:Name="Text" HorizontalAlignment="Left" Height="141" Margin="211,44,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="170" Background="#FF9DECF1" BorderBrush="Black" Foreground="#FF0012A5" />

    </Grid>
</Window>
